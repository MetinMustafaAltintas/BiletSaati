@model UpdatePlaceAdminPageVM

<form asp-action="UpdatePlace" asp-controller="Place" method="post" class="col-md-6" style="margin-left:25%">
    <input type="hidden" asp-for="UpdatePlaceAdminPureVM.ID" />
    <div class="mb-3">
        <label>Mekan İsmini giriniz</label>
        <input asp-for="UpdatePlaceAdminPureVM.PlaceName" class="form-control" />
        <span asp-validation-for="UpdatePlaceAdminPureVM.PlaceName" class="text-danger"></span>
    </div>
    <br />
    <div class="mb-3">
        <label>Şehir Seciniz</label>
        <select asp-for="UpdatePlaceAdminPureVM.CityID" asp-items='new SelectList(Model.PlaceCityAdminPureVMs,"ID","CityName")'>
        </select>
    </div>
    <br />
    <div class="mb-3">
        <button class="btn btn-primary">Güncelle</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>

</form>