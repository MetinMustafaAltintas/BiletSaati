@model GetRolePageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Roller Tablosu
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                            <tr>
                                <th>Rol Ismi</th>
                                <th class="hidden-phone">Durumu</th>
                                <th class="hidden-phone">Guncelle</th>
                                <th class="hidden-phone">Pasife Al</th>
                                <th class="hidden-phone">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetRolePureVM item in Model.GetRolePureVMs)
                            {
                                <tr class="gradeX">
                                    <td>@item.RoleName</td>
                                    <td class="center hidden-phone">@item.Status</td>
                                    <td class="center hidden-phone"><a asp-action="UpdateRole" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                                    <td class="center hidden-phone"><a asp-action="PassiveRole" asp-route-id="@item.ID" class="btn btn-info">Pasife Al</a></td>
                                    <td class="center hidden-phone"><a asp-action="DeleteRole" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
            <a data-toggle="modal" href="#myModal" class="btn btn-success" style="position:relative; bottom: 10px; left: 90%;">Yeni Rol Ekle</a>
        </section>
    </div>
</div>



<form asp-action="RoleCreate" asp-controller="Role" method="post" class="form-signin">
    <!-- Modal -->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Yeni Rol Ekle</h4>
                </div>
                <div class="modal-body">
                    <p>Rol ismi giriniz</p>
                    <input asp-for="CreateRolePureVM.RoleName" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="CreateRolePureVM.RoleName"></span>
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">İptal</button>
                    <button class="btn btn-success" type="submit">Kaydet</button>
                </div>
            </div>
        </div>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>
    <!-- modal -->

</form>




