<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="KesifDunyasi">
    <meta name="author" content="BiletSaati">
    <meta name="keyword" content="BiletSaati">
    <link rel="shortcut icon" href="img/KesifDunyasi.png">

    <title>Bilet Saati</title>


    <!-- Bootstrap core CSS -->
    <link href="~/OuterTools/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/OuterTools/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/advanced-datatable/media/css/demo_page.css" rel="stylesheet" />
    <link href="~/OuterTools/assets/advanced-datatable/media/css/demo_table.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/OuterTools/css/style-responsive.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <!--logo start-->
            <a class="logo" asp-action="Index" asp-controller="Home" asp-area="">Bilet<span>Saati</span></a>

            <!--logo end-->
            <div class="horizontal-menu navbar-collapse collapse ">
                <ul class="nav navbar-nav">
                    <li>
                        <a asp-action="index" asp-area="Admin" asp-controller="Home"> <i class="icon-home"></i> AnaSayfa</a>
                    </li>
                    <li><a asp-action="index" asp-area="Admin" asp-controller="User">Kullanıcı Listesi</a></li>
                    <li><a asp-action="index" asp-area="Admin" asp-controller="Role">Role Listesi</a></li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle" >Kategori Menüsü<b class=" icon-angle-down"></b></a>
                        <ul class="dropdown-menu">
                            <li><a asp-action="index" asp-area="Admin" asp-controller="Category">Kategori Listesi</a></li>
                            <li><a asp-action="CreateCategory" asp-area="Admin" asp-controller="Category">Kategori Ekle</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle">Filmler<b class=" icon-angle-down"></b></a>
                        <ul class="dropdown-menu">
                            <li><a asp-action="index" asp-area="Admin" asp-controller="Movie">Film Listesi</a></li>
                            <li><a asp-action="CreateMovie" asp-area="Admin" asp-controller="Movie">Film Ekle</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" data-hover="dropdown" class="dropdown-toggle">Şehirler<b class=" icon-angle-down"></b></a>
                        <ul class="dropdown-menu">
                            <li><a asp-action="index" asp-area="Admin" asp-controller="City">Şehir Listesi</a></li>
                            <li><a asp-action="CreateCity" asp-area="Admin" asp-controller="City">Şehir Ekle</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">

                    <!-- user login dropdown start-->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown ">
                            <a data-toggle="dropdown" class="dropdown-toggle">
                                <!--  <img alt="" src="img/avatar1_small.jpg"> -->
                                <span class="icon-user"></span>
                                <span class="username"> @User.Identity.Name</span>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended">
                                <div class="log-arrow-up"></div>
                                <li><a asp-action="index" asp-controller="Profile" asp-area="" asp-route-name="@User.Identity.Name"><i class="icon-user"></i> Profil</a></li>
                                <li><a asp-action="index" asp-controller="Order" asp-area="" asp-route-name="@User.Identity.Name"><i class="icon-shopping-cart"></i> Siparişlerim</a></li>
                                <li><a asp-action="Signout" asp-controller="Home" asp-area=""><i class="icon-key"></i> Çıkış Yap</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-action="Signin" asp-controller="Home">Giriş Yap</a>
                        </li>
                    }
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
       
        <!--sidebar end-->
        <!--main content start-->
            <section class="wrapper">
                @RenderBody()
            </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer">
            <div class="text-center">
                Keşif Dünyası
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <!--<script src="js/jquery.js"></script>-->
    <script type="text/javascript" language="javascript" src="~/OuterTools/assets/advanced-datatable/media/js/jquery.js"></script>
    <script src="~/OuterTools/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/OuterTools/js/jquery.dcjqaccordion.2.7.js"></script>
    <script type="text/javascript" src="~/OuterTools/js/hover-dropdown.js"></script>
    <script src="~/OuterTools/js/jquery.scrollTo.min.js"></script>
    <script src="~/OuterTools/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script type="text/javascript" language="javascript" src="~/OuterTools/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>
    <script src="~/OuterTools/js/respond.min.js"></script>


    <!--common script for all pages-->
    <script src="~/OuterTools/js/common-scripts.js"></script>

    <!--script for this page only-->

    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            $('#example').dataTable({
                "aaSorting": [[4, "desc"]]
            });
        });


        $(document).ready(function () {
            // attributesTable için DataTable özelliklerini uygula
            $('#attributesTable').DataTable();

            // valuesTable için DataTable özelliklerini uygula
            $('#valuesTable').DataTable();
        });

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

        $(document).ready(function () {
            // Belirli bir süre sonra uyarı kutularını kapat
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () {
                    $(this).remove();
                });
            }, 5000); // 5 saniye beklet

        });
    </script>
</body>
</html>
