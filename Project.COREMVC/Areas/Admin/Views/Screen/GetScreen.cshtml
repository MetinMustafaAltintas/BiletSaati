@model GetScreenAdminPageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}
<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Salonlar Tablosu
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                            <tr>
                                <th>Salon ID</th>
                                <th>Salon Ismi</th>
                                <th>Kapasitesi</th>
                                <th>Mekan Ismi</th>
                                <th class="center hidden-phone">Durumu</th>
                                <th class="center hidden-phone">Guncelle</th>
                                <th class="center hidden-phone">Pasife Al</th>
                                <th class="center hidden-phone">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetScreenAdminPureVM item in Model.getScreenAdminPureVMs)
                            {
                                <tr class="gradeX">
                                    <td>@item.ID</td>
                                    <td>@item.ScreenName</td>
                                    <td>@item.Capacity</td>
                                    <td>@item.PlaceName</td>
                                    <td>@item.Status</td>
                                    <td class="center hidden-phone"><a asp-action="UpdateScreen" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                                    <td class="center hidden-phone"><a asp-action="DeleteScreen" asp-route-id="@item.ID" class="btn btn-info">Pasife Al</a></td>
                                    <td class="center hidden-phone"><a asp-action="DestroyScreen" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Salon ID</th>
                                <th>Salon Ismi</th>
                                <th>Kapasitesi</th>
                                <th>Mekan Ismi</th>
                                <th class="center hidden-phone">Durumu</th>
                                <th class="center hidden-phone">Guncelle</th>
                                <th class="center hidden-phone">Pasife Al</th>
                                <th class="center hidden-phone">Sil</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>