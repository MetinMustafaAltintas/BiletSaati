@model GetCategoryPageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}
<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategoriler Tablosu
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Ismi</th>
                                <th class="hidden-phone">Durumu</th>
                                <th class="hidden-phone">Guncelle</th>
                                <th class="hidden-phone">Pasife Al</th>
                                <th class="hidden-phone">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetCategoryPureVM item in Model.GetCategoryPureVMs)
                            {
                                <tr class="gradeX">
                                    <td>@item.ID</td>
                                    <td>@item.CategoryName</td>
                                    <td class="center hidden-phone">@item.Status</td>
                                    <td class="center hidden-phone"><a asp-action="UpdateCategory" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                                    <td class="center hidden-phone"><a asp-action="DeleteCategory" asp-route-id="@item.ID" class="btn btn-info">Pasife Al</a></td>
                                    <td class="center hidden-phone"><a asp-action="DestroyCategory" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Kategori ID</th>
                                <th>Kategori Ismi</th>
                                <th class="hidden-phone">Durumu</th>
                                <th class="hidden-phone">Guncelle</th>
                                <th class="hidden-phone">Pasife Al</th>
                                <th class="hidden-phone">Sil</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

