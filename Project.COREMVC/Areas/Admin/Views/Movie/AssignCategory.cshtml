@model GetMovieCategoryPageVM

<form asp-action="AssignCategory" asp-controller="Movie" method="post" class="p-3 w-75 m-auto">
    <input type="hidden" asp-for="MovieID" />
    <a style="font-size:large; font-weight:bold">@TempData["Message"]</a>
    <div class="list-group">
        @for (int i = 0; i < Model.GetMovieCategoryPureVMs.Count; i++)
        {
            <input type="hidden" asp-for="@Model.GetMovieCategoryPureVMs[i].CategoryName" />
            <input type="hidden" asp-for="@Model.GetMovieCategoryPureVMs[i].CategoryID" />

            <label class="list-group-item">
                <input class="form-check-input me-1" asp-for="GetMovieCategoryPureVMs[i].Checked" /> @Model.GetMovieCategoryPureVMs[i].CategoryName
            </label>

        }
    </div>

    <br /><br />

    <div class="mb-3">
        <button class="btn btn-primary">Kaydet</button>
    </div>
</form>


