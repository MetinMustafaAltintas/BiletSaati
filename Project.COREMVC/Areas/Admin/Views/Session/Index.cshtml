@model GetSessionAdminPageVM

@if (TempData["Message"] != null)
{
    <h1 class="alert alert-danger">
        <b>@TempData["Message"]!</b>
    </h1>
}
<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Seanslar Tablosu
            </header>
            <div class="panel-body">
                <div class="adv-table">
                    <table class="display table table-bordered table-striped" id="example">
                        <thead>
                            <tr>
                                <th>Seans ID</th>
                                <th>Seans Saati</th>
                                <th>Fiyat</th>
                                <th class="center hidden-phone">Durumu</th>
                                <th class="center hidden-phone">Guncelle</th>
                                <th class="center hidden-phone">Pasife Al</th>
                                <th class="center hidden-phone">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetSessionAdminPureVM item in Model.GetSessionAdminPureVMs)
                            {
                                <tr class="gradeX">
                                    <td>@item.ID</td>
                                    <td>@item.ShowTime</td>
                                    <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                    <td>@item.Status</td>
                                    <td class="center hidden-phone"><a asp-action="UpdateSession" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></td>
                                    <td class="center hidden-phone"><a asp-action="DeleteSession" asp-route-id="@item.ID" class="btn btn-info">Pasife Al</a></td>
                                    <td class="center hidden-phone"><a asp-action="DestroySession" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Seans ID</th>
                                <th>Seans Saati</th>
                                <th>Fiyat</th>
                                <th class="center hidden-phone">Durumu</th>
                                <th class="center hidden-phone">Guncelle</th>
                                <th class="center hidden-phone">Pasife Al</th>
                                <th class="center hidden-phone">Sil</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>