@model CreateSessionAdminPageVM

<form asp-action="CreateSession" asp-controller="Session" method="post" class="col-md-6" style="margin-left:25%">

    <div class="mb-3">
        <label>Seans Saati giriniz</label>
        <input asp-for="CreateSessionAdminPureVM.ShowTime" type="time" step="900" class="form-control" />
        <span asp-validation-for="CreateSessionAdminPureVM.ShowTime" class="text-danger"></span>
    </div>
    <br />
    <div class="mb-3">
        <label>Fiyat</label>
        <input asp-for="CreateSessionAdminPureVM.Price" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="CreateSessionAdminPureVM.Price" class="text-danger"></span>
    </div>
    <br />
    <div class="mb-3">
        <button class="btn btn-primary">Ekle</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>

</form>